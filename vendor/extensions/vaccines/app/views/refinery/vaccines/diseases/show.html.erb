<% content_for :body_content_title do %>
  <%= @disease.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @disease.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @disease.description %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @disease.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="diseases">
      <% @diseases.each do |disease| %>
        <li>
          <%= link_to disease.name, refinery.vaccines_disease_path(disease) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
