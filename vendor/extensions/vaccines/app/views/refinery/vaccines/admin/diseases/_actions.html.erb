<ul>
  <% if ::Refinery::Vaccines::Admin::DiseasesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.vaccines_admin_diseases_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_vaccines_admin_disease_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Vaccines::Admin::DiseasesController.sortable? && ::Refinery::Vaccines::Disease.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Diseases"),
                 refinery.vaccines_admin_diseases_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Diseases"),
                 refinery.vaccines_admin_diseases_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
