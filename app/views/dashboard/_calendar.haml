%table.table
  %thead
    %tr
      %th(colspan="100")
        %h3
          = calendar.child.name
          %small= "Nacido el #{l(calendar.child.date_of_birth, format: :long)}"

  %tbody
    - calendar.vaccines.each do |vaccine|
      %tr
        %td.disease
          = vaccine.name
          %span
            = vaccine.diseases_list
        - calendar.vaccinations_for(vaccine).each do |vaccination|
          %td{class: (vaccination.status if vaccination)}
            %i

  %tfoot
    %tr.blue
      %td
      - calendar.timespans.each do |timespan|
        %td= timespan.month_name
    %tr.blue
      %td
      - calendar.timespans.each do |timespan|
        %td= timespan.year
    %tr
      %td
      - calendar.timespans.each do |timespan|
        %td= timespan.age_description


