- content_for :topbar do
  %h1 Crear una cuenta

- content_for :body do
  .registration
    .row-fluid
      .span4
        .registration-steps
          = render "sms_steps", :step => 2
          = render "verification_code_header", resend: @resend, error: @error, channel:@channel
          = render "verification_code_form", :path => subscribers_submit_verification_code_and_fulfill_user_data_path, :channel => @channel
          .control-group
            .controls
              - unless @resend
                = link_to subscribers_find_subscriber_and_send_verification_code_path(:channel_sms_resend => @channel), class: "btn-link", method: 'POST' do
                  %i.ics-refresh
                  No recibí el código
                %br
              = link_to subscribers_subscriber_from_mobile_path(), class: "btn-link" do
                %i.ics-pencil
                Cambiar el Número
      .span8
        = render "side_text"