= form_tag(subscribers_submit_verification_code_path) do
  = hidden_field_tag :id, @channel.id
  %div
    = label_tag :codigo
    = text_field :verification_code, ""
  %div= submit_tag "Ok"

= button_to "No recibi el SMS", subscribers_add_mobile_number_and_send_verification_code_path(:channel_sms_resend => @channel)
= render "side_text"