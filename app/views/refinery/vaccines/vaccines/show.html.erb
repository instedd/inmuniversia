<% content_for :body_content_title do %>
  <%= @vaccine.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Informacion general</h1>
    <p>
      <%=raw @vaccine.general_info %>
    </p>
  </section>
  <section>
    <h1>Nombre comercial</h1>
    <p>
      <%=raw @vaccine.commercial_name %>
    </p>
  </section>
  <section>
    <h1>Dosis</h1>
    <p>
      <%=raw @vaccine.doses_info %>
    </p>
  </section>
  <section>
    <h1>Recomendaciones</h1>
    <p>
      <%=raw @vaccine.recommendations %>
    </p>
  </section>
  <section>
    <h1>Efectos secundarios</h1>
    <p>
      <%=raw @vaccine.side_effects %>
    </p>
  </section>
  <section>
    <h1>Mas informacion</h1>
    <p>
      <%=raw @vaccine.more_info %>
    </p>
  </section>
  <section>
    <h2>Enfermedades que previene</h2>
    <ul id="diseases">
      <% @vaccine.diseases.each do |disease| %>
        <li>
          <%= link_to disease.name, refinery.vaccines_disease_path(disease) %>
        </li>
      <% end %>
    </ul>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="vaccines">
      <% @vaccines.each do |vaccine| %>
        <li>
          <%= link_to vaccine.name, refinery.vaccines_vaccine_path(vaccine) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
