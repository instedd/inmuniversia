%h3 Nuevo hijo
= form_for child, html: {class: 'form-inline '} do |f|
  - if child.errors.any?
    #error_explanation
      %h2= "#{pluralize(child.errors.count, "error")} prohibited this child from being saved:"
      %ul
        - child.errors.full_messages.each do |msg|
          %li= msg

  = f.text_field :name, placeholder: "Nombre"
  = f.text_field :date_of_birth, class: 'datepicker', placeholder: "Fecha de nacimiento"
  = f.select :gender, Child.gender.options, include_blank: "Sexo"
  = f.submit 'Agregar hijo', class: 'btn'
