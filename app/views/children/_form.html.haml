= form_for @child do |f|
  - if @child.errors.any?
    #error_explanation
      %h2= "#{pluralize(@child.errors.count, "error")} prohibited this child from being saved:"
      %ul
        - @child.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :date_of_birth
    = f.date_select :date_of_birth
  .field
    = f.label :gender
    = f.text_field :gender
  .actions
    = f.submit 'Save'
